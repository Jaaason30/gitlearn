/* 容器与内容区 */
.container{position:relative;width:100%;height:100%;background:#fff;}
.content{min-height:100vh;}

/* 顶栏 */
.top-bar{position:relative;display:flex;flex-direction:row;align-items:center;padding:0 24rpx;border-bottom:1rpx solid #eee;z-index:3;}
.icon-btn{margin-left:16rpx;}
.icon-emoji{font-size:48rpx;color:#444;}
.top-tabs{position:absolute;left:60rpx;right:0;top:44rpx;display:flex;flex-direction:row;justify-content:center;}
.tab-touch{margin-right:40rpx;}
.tab-text{font-size:32rpx;color:#444;}
.tab-active{color:#d81e06;font-weight:600;}

/* Banner */
.banner{width:100%;height:280rpx;}
.banner-image{width:100%;height:100%;border-radius:16rpx;}

/* 列表与卡片 */
.list-content{padding:0 16rpx;display:flex;flex-direction:row;flex-wrap:wrap;}
.card{width:48%;margin-bottom:16rpx;margin-right:16rpx;background:#fff;border-radius:16rpx;overflow:hidden;box-shadow:0 4rpx 8rpx rgba(0,0,0,0.08);}
.card-even{margin-right:0;}
.card-image{width:100%;height:390rpx;}
.card-title{padding:12rpx;font-size:28rpx;line-height:36rpx;color:#222;}
.card-footer{display:flex;flex-direction:row;justify-content:space-between;align-items:center;padding:0 12rpx 16rpx;}
.author-container{display:flex;flex-direction:row;align-items:center;}
.author-avatar{width:32rpx;height:32rpx;border-radius:16rpx;margin-right:8rpx;}
.author{font-size:24rpx;color:#666;}
.likes-row{display:flex;flex-direction:row;align-items:center;}
.like-icon{font-size:28rpx;color:#666;}
.likes-text{font-size:24rpx;color:#666;margin-left:4rpx;}

/* 底部导航：横排 + 安全区处理 */
.bottom-bar{
  position:fixed;left:0;right:0;bottom:0;height:112rpx;
  background:#fff;border-top:1rpx solid #eee;z-index:999;
  padding-bottom:env(safe-area-inset-bottom);
  display:flex;flex-direction:row; /* 关键：横排 */
}
.bottom-item-container{
  flex:1; /* 均分 */
  height:112rpx;
  display:flex;flex-direction:column;align-items:center;justify-content:center;
}
.bottom-dot{
  width:16rpx;height:16rpx;border-radius:8rpx;background:#d81e06;margin-bottom:8rpx;
}
.bottom-item{display:flex;flex-direction:column;align-items:center;justify-content:center;}
.bottom-icon-img{width:44rpx;height:44rpx;display:block;} /* 本地图标 */
.bottom-label{font-size:24rpx;margin-top:4rpx;color:#222;}
.bottom-item-active .bottom-label{color:#d81e06;font-weight:600;}
